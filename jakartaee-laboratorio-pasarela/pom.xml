        </dependency>

        <!-- Micrometer (opcional) -->
        <dependency>
            <groupId>io.micrometer</groupId>
            <artifactId>micrometer-commons</artifactId>
            <version>1.12.0</version>
            <exclusions>
                <!-- Excluir todas las dependencias websocket jetty para evitar conflicto -->
