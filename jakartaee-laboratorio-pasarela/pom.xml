                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.medioPago</groupId>
            <artifactId>ServicioMedioPagoMock</artifactId>
            <version>1.0-SNAPSHOT</version>
            <exclusions>
                <exclusion>
                    <groupId>org.eclipse.jetty.websocket</groupId>
